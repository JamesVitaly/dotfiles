# git aliases
alias gs='git status'
alias gc='git commit'
alias gl='git log'
alias ga='git add'
alias gpo='git push origin '
alias gpom='git push origin master'
alias gpuom='git pull origin master'
alias gp='git push '

#meteor aliases
alias app-start='meteor npm start'
alias app-deploy='meteor npm run deploy-production'

#wordpress aliases
alias vvvthemes='cd www/wordpress-default/wp-content/themes'

# doopoll aliases
alias dp='cd ~/Dev/doopoll-app'
